FROM php:7.4-cli
MAINTAINER jerry <jrzyq111@gmail.com>

ENV PHPREDIS_VERSION 3.0.0
ENV PHPREDIS_EXT_DIR /usr/src/php/redis

RUN mkdir -p $PHPREDIS_EXT_DIR \
	&& curl -L https://github.com/phpredis/phpredis/archive/$PHPREDIS_VERSION.tar.gz | tar xvz -C $PHPREDIS_EXT_DIR --strip 1 \
	&& docker-php-ext-install $PHPREDIS_EXT_DIR

WORKDIR /mnt/app

RUN apt-get update && apt-get install -y \
	git \
	vim \
	wget \
	cron \
	locales \
	htop \
	mariadb-client \
	build-essential \
	gcc \
	make \
	curl \
	libonig-dev \
	libfcgi-dev \
	libssl-dev \
	libxml2-dev \
	libbz2-dev \
	libcurl4-openssl-dev \
	libzip-dev \
    libjpeg62-turbo-dev \
	libpng-dev \
	libfreetype6-dev \
	libgmp-dev

RUN docker-php-ext-configure gd --with-freetype --with-jpeg \
	&& docker-php-ext-install -j4 gd bz2 zip mbstring iconv mysqli pdo_mysql opcache bcmath gmp

# set language
RUN dpkg-reconfigure locales && \
	locale-gen C.UTF-8 && \
	/usr/sbin/update-locale LANG=C.UTF-8
RUN echo 'zh_CN.UTF-8 UTF-8' >> /etc/locale.gen && \
	locale-gen
ENV LC_ALL C.UTF-8
ENV LANG zh_CN.UTF-8
ENV LANGUAGE zh_CN.UTF-8

# install composer
RUN php -r "copy('https://install.phpcomposer.com/installer', 'composer-setup.php');" \
	&& php composer-setup.php \
	&& php -r "unlink('composer-setup.php');" \
	&& mv composer.phar /usr/local/bin/composer \
	&& chmod +x /usr/local/bin/composer \
	&& echo 'export PATH="$PATH:$HOME/.composer/vendor/bin"' >> ~/.bashrc \
	&& . ~/.bashrc \
	&& composer config -g repo.packagist composer https://mirrors.aliyun.com/composer/

# configure cron
COPY ./config/cron/*.cron /cron.d/
WORKDIR /cron.d
RUN find *.cron -type f -exec cat {} \;>>/etc/crontab

# configure supervisor
RUN apt-get install -y supervisor
COPY ./config/supervisor/ /etc/supervisor/conf.d/

# clean
RUN apt-get clean \
	&& apt-get autoclean \
	&& rm -rf /var/lib/apt/lists/*

RUN docker-php-source delete

COPY ./scripts/startup.sh /bin/startup.sh
RUN chmod +x /bin/startup.sh
WORKDIR /mnt/app
ENTRYPOINT ["startup.sh"]
