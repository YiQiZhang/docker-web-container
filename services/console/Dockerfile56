FROM php:5.6
MAINTAINER jerry <jrzyq111@gmail.com>

ENV PHPREDIS_VERSION 2.2.7
ENV PHPREDIS_EXT_DIR /usr/src/php/redis

RUN mkdir -p $PHPREDIS_EXT_DIR \
	&& curl -L https://github.com/phpredis/phpredis/archive/$PHPREDIS_VERSION.tar.gz | tar xvz -C $PHPREDIS_EXT_DIR --strip 1 \
	&& docker-php-ext-install $PHPREDIS_EXT_DIR

WORKDIR /mnt/app

RUN apt-get update && apt-get install -y \
	git \
	vim \
	wget \
	cron \
	locales \
	mariadb-client \
	build-essential \
	gcc \
	make \
	curl \
	libfcgi-dev \
	libmcrypt-dev \
	libssl-dev \
	libxml2-dev \
	libbz2-dev \
	libcurl4-openssl-dev \
	libjpeg-dev \
	libpng-dev \
	libfreetype6-dev

RUN docker-php-ext-configure gd \
	--with-freetype-dir=/usr/include/ \
	--with-png-dir=/usr \
	--with-jpeg-dir=/usr \
	&& docker-php-ext-install mcrypt bz2 zip mbstring gd iconv mysqli pdo_mysql opcache bcmath

# set language
RUN dpkg-reconfigure locales && \
	locale-gen C.UTF-8 && \
	/usr/sbin/update-locale LANG=C.UTF-8
RUN echo 'zh_CN.UTF-8 UTF-8' >> /etc/locale.gen && \
	locale-gen
ENV LC_ALL C.UTF-8
ENV LANG zh_CN.UTF-8
ENV LANGUAGE zh_CN.UTF-8

# install composer
RUN php -r "copy('https://getcomposer.org/installer', 'composer-setup.php');" \
	&& php composer-setup.php \
	&& php -r "unlink('composer-setup.php');" \
	&& mv composer.phar /usr/local/bin/composer \
	&& chmod +x /usr/local/bin/composer \
	&& echo 'export PATH="$PATH:$HOME/.composer/vendor/bin"' >> ~/.bashrc \
	&& . ~/.bashrc \
	&& composer config -g repo.packagist composer https://packagist.phpcomposer.com

# configure cron
COPY ./config/cron/*.cron /cron.d/
WORKDIR /cron.d
RUN find *.cron -type f -exec cat {} \;>>/etc/crontab

# configure supervisor
RUN apt-get install -y supervisor
COPY ./config/supervisor/ /etc/supervisor/conf.d/

# clean
RUN apt-get clean \
	&& apt-get autoclean \
	&& rm -rf /var/lib/apt/lists/*

COPY ./scripts/startup.sh /bin/startup.sh
RUN chmod +x /bin/startup.sh
WORKDIR /mnt/app
ENTRYPOINT ["startup.sh"]
